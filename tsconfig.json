{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "index.ts", "index.js"],
  "exclude": ["node_modules", "dist"]
}
